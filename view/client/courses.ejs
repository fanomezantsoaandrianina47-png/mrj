<div class="container">
    <% if(courses.length>0){ %>
        <% courses.forEach(c=>{ %>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <video src="./uploads/videos/<%c.video%>" controls></video>
                        <div class="card-body">
                            <div class="card-title"><b><%=c.titre%></b></div>
                            <div class="card-content">
                                <small><%=c.categorie.categorie%></small>
                                <small>Envoi N° <%=c.id%></small>
                                <p><%=c.description%></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <%}else{%>
        <div class="d-flex justify-content-center align-items-center">
            <div class="alert alert-info">Votre cours sera bientôt disponible, vu que c'est bientôt la fin de cette semestre, nous avons choisi de renouveller votre session</div>
        </div>
    <%}%>
</div>